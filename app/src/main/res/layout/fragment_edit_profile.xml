<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Edit_Profile"
    android:background="@color/white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.usaitech.twinflames.Profile.EditProfile.EditProfile_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        app:contentInsetLeft="0dp"
        android:elevation="5dp"
        app:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/light_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:id="@+id/back_btn"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/back_btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Done"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/d_ripple_effect"
            android:id="@+id/done_txt"
            android:textColor="@color/coloraccent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white"
       android:orientation="vertical">

       <com.wonshinhyo.dragrecyclerview.DragRecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:paddingTop="5dp"
           android:elevation="1dp"
           android:background="@color/off_white"
           android:id="@+id/Profile_photos_list">

       </com.wonshinhyo.dragrecyclerview.DragRecyclerView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="About Profile name"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:id="@+id/profile_name_txt"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minLines="3"
               android:hint="About"
               android:paddingTop="5dp"
               android:paddingLeft="15dp"
               android:textSize="15dp"
               android:imeOptions="flagNavigateNext"
               android:nextFocusForward="@+id/jobtitle_edit"
               android:id="@+id/about_user"
               android:textColorHint="@color/gainsboro"
               android:textColor="@color/dimgray"
               android:backgroundTint="@color/transparent"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Job Title"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Job Title"
               android:padding="15dp"
               android:textSize="15dp"
               android:singleLine="true"
               android:imeOptions="flagNavigateNext"
               android:nextFocusForward="@+id/company_edit"
               android:id="@+id/jobtitle_edit"
               android:textColorHint="@color/gainsboro"
               android:textColor="@color/dimgray"
               android:backgroundTint="@color/transparent"/>

       </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Company"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Company"
               android:padding="15dp"
               android:paddingLeft="15dp"
               android:textSize="15dp"
               android:singleLine="true"
               android:imeOptions="flagNavigateNext"
               android:nextFocusForward="@+id/school_edit"
               android:id="@+id/company_edit"
               android:textColorHint="@color/gainsboro"
               android:textColor="@color/dimgray"
               android:backgroundTint="@color/transparent"/>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="School/College"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="School/College"
               android:padding="15dp"
               android:id="@+id/school_edit"
               android:textSize="15dp"
               android:singleLine="true"
               android:imeOptions="actionDone"
               android:textColorHint="@color/gainsboro"
               android:textColor="@color/dimgray"
               android:backgroundTint="@color/transparent"/>

       </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Date Of Birth"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Date of Birth"
               android:padding="15dp"
               android:id="@+id/dateofbirth_edit"
               android:textSize="15dp"
               android:editable="false"
               android:focusable="false"
               android:textColorHint="@color/gainsboro"
               android:textColor="@color/dimgray"
               android:backgroundTint="@color/transparent"/>

       </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingBottom="20dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Gender"
               android:textSize="18dp"
               android:padding="10dp"
               android:elevation="0.5dp"
               android:textStyle="italic"
               android:background="@color/lightgraycolor"
               android:textColor="@color/dimgray"/>


           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:paddingLeft="10dp">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Male"
                   android:textSize="15dp"
                   android:id="@+id/male_btn"
                   android:theme="@style/RadioButton"
                   android:textColor="@color/black"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="female"
                   android:textSize="15dp"
                   android:id="@+id/female_btn"
                   android:theme="@style/RadioButton"
                   android:textColor="@color/black"/>
           </RadioGroup>

       </LinearLayout>


   </LinearLayout>

</ScrollView>


    </RelativeLayout>
</FrameLayout>
